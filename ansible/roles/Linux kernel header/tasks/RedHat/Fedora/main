---
- name: Update packages. Solved most build errors for me.
  ansible.builtin.dnf:
    update_only: true
  become: true

- name: Install Linux kernel header files
  ansible.builtin.dnf:
    name:
      - kernel-headers
      - kernel-devel
    state: latest
  become: true


- name: Install Matched Linux kernel header files
  ansible.builtin.dnf:
    name:
      - kernel-devel-matched
      # - kernel-devel-matched-{{kernel_major_minor_ver}}
    state: latest
  become: true
  when: matched_kernel


